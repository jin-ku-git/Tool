<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="13dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="5dp"

    android:orientation="horizontal"
    android:background="@drawable/radius_white"

    android:elevation="@dimen/size_2dp">

    <ImageView
        android:id="@+id/unchecked_img"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp"
        android:src="@mipmap/unchecked_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="15dp"
        >

    <TextView
        android:id="@+id/right_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/size_10dp"
        android:text="哈哈哈"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="@dimen/img_20sp" />


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/size_60dp"
        android:layout_height="@dimen/size_60dp"
        android:src="@mipmap/img_zhanweitu"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="柜子名称"
            android:textColor="#ff333333"
            android:textSize="18sp" />
            <TextView
                android:id="@+id/status_type"
                android:layout_width="50dp"
                android:layout_height="@dimen/size_19dp"
                android:text="使用中"
                android:gravity="center"
                android:layout_gravity="top"
                android:background="@drawable/jianbian_radius_green"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="柜子地址"
            android:textColor="#ff666666"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_10dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/update_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_blue"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="更新"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/size_15dp"
                android:textSize="@dimen/size_16dp" />
            <TextView
                android:id="@+id/open_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_blue"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="开门"
                android:textColor="@color/white"

                android:textSize="@dimen/size_16dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>