<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_white"
    android:padding="@dimen/size_15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_1dp">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:orientation="horizontal"
            android:background="@drawable/radius_10dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_15dp"
            >
            <TextView
                android:id="@+id/tv_store"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/lower"
                android:drawablePadding="8dp"
                android:text="选择门店"
                android:gravity="center"
                android:textColor="@color/white"
                android:lines="2"
                android:ellipsize="end"
                android:textSize="@dimen/size_14dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_15dp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_10dp"
                android:layout_marginRight="@dimen/size_5dp"
                android:textColorHint="@color/md_white_1000"
                binding:hintTextAppearance="@style/textInputLayoutHint"
                android:padding="@dimen/size_3dp"
                >
                <EditText
                    android:id="@+id/latitude_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:background="@drawable/radius_10dp"
                    android:hint="请输入纬度"
                    android:textColor="@color/md_white_1000"
                    android:textColorHint="@color/md_grey_400"
                    android:paddingLeft="@dimen/size_10dp"
                    android:inputType="number"
                    android:theme="@style/WhiteEditText"
                    android:textSize="@dimen/text_16sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_10dp"
                android:layout_marginLeft="@dimen/size_5dp"
                android:textColorHint="@color/md_white_1000"
                binding:hintTextAppearance="@style/textInputLayoutHint"
                android:padding="@dimen/size_3dp"
                >
                <EditText
                    android:id="@+id/longitude_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:background="@drawable/radius_10dp"
                    android:hint="请输入经度"
                    android:textColor="@color/md_white_1000"
                    android:textColorHint="@color/md_grey_400"
                    android:paddingLeft="@dimen/size_10dp"
                    android:inputType="number"
                    android:theme="@style/WhiteEditText"

                    android:textSize="@dimen/text_16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radius_10dp"
            android:textColorHint="@color/md_white_1000"
            binding:hintTextAppearance="@style/textInputLayoutHint"
            android:padding="@dimen/size_3dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_15dp"
            >
            <EditText
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:background="@drawable/radius_10dp"
                android:hint="请输入柜子名"
                android:textColor="@color/md_white_1000"
                android:textColorHint="@color/md_grey_400"
                android:paddingLeft="@dimen/size_10dp"
                android:theme="@style/WhiteEditText"
                android:textSize="@dimen/text_16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radius_10dp"
            android:textColorHint="@color/md_white_1000"
            binding:hintTextAppearance="@style/textInputLayoutHint"
            android:padding="@dimen/size_3dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_15dp"
            >
            <EditText
                android:id="@+id/address_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:background="@drawable/radius_10dp"
                android:hint="请输入柜子地址"
                android:textColor="@color/md_white_1000"
                android:textColorHint="@color/md_grey_400"
                android:paddingLeft="@dimen/size_10dp"
                android:theme="@style/WhiteEditText"
                android:textSize="@dimen/text_16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_15dp"
            android:background="@drawable/radius_10dp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColorHint="@color/md_white_1000"
                binding:hintTextAppearance="@style/textInputLayoutHint"
                android:padding="@dimen/size_3dp"

                >
                <EditText
                    android:id="@+id/number_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:background="@drawable/radius_10dp"
                    android:hint="请输入主板编号"
                    android:textColor="@color/md_white_1000"
                    android:textColorHint="@color/md_grey_400"
                    android:paddingLeft="@dimen/size_10dp"
                    android:theme="@style/WhiteEditText"
                    android:textSize="@dimen/text_16sp"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/scanning_image"
                android:layout_width="@dimen/size_35dp"
                android:layout_height="@dimen/size_35dp"
                android:src="@mipmap/scanning"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/size_15dp"
                />
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radius_10dp"
            android:textColorHint="@color/md_white_1000"
            binding:hintTextAppearance="@style/textInputLayoutHint"
            android:padding="@dimen/size_3dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_15dp"
            >

            <EditText
                android:id="@+id/lattice_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:background="@drawable/radius_10dp"
                android:hint="请输入格子数量"
                android:paddingLeft="@dimen/size_10dp"
                android:text="8"
                android:textColor="@color/md_white_1000"
                android:textColorHint="@color/md_grey_400"
                android:textSize="@dimen/text_16sp"
                android:inputType="number"
                android:digits="1234567890"
            android:theme="@style/WhiteEditText"

                />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_30dp"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/radius_10dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_weight="1"
            />
        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/determine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_30dp"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/radius_10dp"

            android:layout_weight="1"
            />
    </LinearLayout>



</LinearLayout>